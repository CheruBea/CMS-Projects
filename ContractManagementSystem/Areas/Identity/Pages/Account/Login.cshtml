@page
@model LoginModel
@{
    ViewData["Title"] = "WELCOME TO CMS";
}
<h1 class="h1"><b>@ViewData["Title"]</b></h1>
<br />

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2><b> LOGIN.</b></h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"><b>Email</b></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label"><b>Password</b></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <b>
                    <div class="checkbox mb-3 btn-check-danger">
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        <input class="form-check-input " asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div></b>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-danger"><b>Login</b></button>
                </div>
                <div>
                    <p>
                        <a class="link-danger" id="forgot-password" asp-page="./ForgotPassword" ><b>Forgot your password?</b></a>
                    </p>
                    <p>
                        <a class="link-danger" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><b>Register as a new user</b></a>
                    </p>
                    <p>
                        <a class="link-danger" id="resend-confirmation" asp-page="./ResendEmailConfirmation"><b>Resend email confirmation</b></a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
